        <template id="portal_helpdesk_ticket" inherit_id="helpdesk.portal_helpdesk_ticket">
            <xpath expr="//t[@t-call='portal.portal_layout']/div[@t-if='not tickets']" position="replace">
                <div t-if="not grouped_tickets" class="alert alert-info">
                    There are currently no Ticket for your account.
                </div>
            </xpath>
            <xpath expr="//t[@t-call='portal.portal_layout']/t[@t-if='tickets']" position="replace">
                <t t-if="grouped_tickets" t-call="portal.portal_table">
                    <t t-foreach="grouped_tickets" t-as="tickets">
                        <thead>
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th class="text-right">Ref</th>
                                <th class="w-100">Description</th>
                                <th class="text-center">Reported on</th>
                                <th class="text-center">Assigned to</th>
                                <th t-if="groupby == 'none'" class="text-center">Status</th>
                                <th t-else="">
                                    <em class="font-weight-normal text-muted">
                                        Status:-
                                    </em>
                                    <span t-field="tickets[0].sudo().stage_id.name"/>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="tickets" t-as="ticket">
                                <tr>
                                    <td class="text-right">
                                        <a t-attf-href="/helpdesk/ticket/#{ticket.id}">
                                            <small>#</small>
                                            <t t-esc="ticket.id"/>
                                        </a>
                                    </td>
                                    <td>
                                        <a t-attf-href="/helpdesk/ticket/#{ticket.id}">
                                            <span t-field="ticket.name"/>
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="ticket.create_date" t-options='{"widget": "date"}'/>
                                    </td>

                                    <td class="text-center">
                                        <span t-field="ticket.user_id.sudo().name"/>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge badge-pill badge-info" t-att-style="'background-color: %s;' % ticket.stage_id.stage_bg_color" t-field="ticket.stage_id.name"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </t>
                </t>
            </xpath>

        </template>
    </data>
</odoo>