<odoo>
    <data>
        <record id="view_inherit_project_task" model="ir.ui.view">
            <field name="name">view.inherit.project.task</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@id='timesheets_tab']/group/group/field[@name='planned_hours']" position="before">
                    <field name="development_time" widget="float_time"/>
                    <field name="implementation_time" widget="float_time"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>